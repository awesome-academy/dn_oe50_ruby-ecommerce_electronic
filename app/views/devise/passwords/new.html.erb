<% provide :title, t("devises.forgot_password") %>
<h2><%= t "devises.forgot_password" %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="field">
    <%= f.label t "devises.email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <small><i><%= show_message_for_field(resource, :email) %></i></small>
  </div>

  <div class="actions">
    <%= f.submit t "devises.send_reset_password_instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
