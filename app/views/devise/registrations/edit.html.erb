<% provide :title, t("devises.edit_user") %>
<h2><%= t "devises.edit_user" %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="field">
    <%= f.label t "devises.email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <small><i><%= show_message_for_field(resource, :email) %></i></small>
  </div>

  <div class="field">
    <%= f.label t "devises.name" %><br />
    <%= f.text_field :name, autocomplete: "name" %>
    <small><i><%= show_message_for_field(resource, :name) %></i></small>
  </div>

  <div class="field">
    <%= f.label t "devises.gender" %>
    <%= f.radio_button(:gender, User.genders.keys.first, :checked => true) %>&nbsp;<%= t "devises.male" %><br>
    <%= f.radio_button(:gender, User.genders.keys.last) %>&nbsp;<%= t "devises.female" %>
    <small><i><%= show_message_for_field(resource, :gender) %></i></small>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label t "devises.password" %> <i>(<%= t "devises.not_change_password" %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t "devises.characters_minimum" %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label t "devises.password_confirmation" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t "devises.current_password" %> <i>(<%= t "devises.require_current_password" %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t("devises.edit_user") %>
  </div>
<% end %>

<h3><%= t "devises.cancel_account_message" %></h3>

<p><%= button_to t("devises.cancel_account"), registration_path(resource_name), data: { confirm: "are you sure?" }, method: :delete %></p>

<%= link_to t("devises.back") , :back %>
