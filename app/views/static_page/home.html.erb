<% provide(:title, t("pages.home")) %>
<%= render "search_form" %>
<section class="cat_product_area section_gap">
  <div class="container">
    <div class="row flex-row-reverse">
      <div class="col-lg-3">
        <div class="left_sidebar_area">
          <%= render "products/category_product" %>
          <%= render "products/brand_product" %>
        </div>
      </div>
      <div class="col-lg-9">
        <div class="latest_product_inner">
          <div class="row">
            <% if @products.present? %>
              <%= render partial: "products/all_product", collection: @products, as: :product %>
            <% else %>
              <div><%= t "ransack.not_find_any_product" %></div>
            <% end %>
          </div>
        </div>
        <%= paginate @products %>
      </div>
    </div>
  </div>
</section>
